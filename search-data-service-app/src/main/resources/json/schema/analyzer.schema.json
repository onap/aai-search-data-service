{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Analyzer",
  "description": "The analyzer aggregates a tokenizer and multiple filters to describe how an input stream should be indexed.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "behaviours": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tokenizer": {
      "type": "string"
    },
    "filters": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}